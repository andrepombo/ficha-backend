# Production Environment Variables for Pinte Fichas Backend
# Copy this file to .env on your EC2 instance and update the values

# SECURITY WARNING: Generate a new secret key for production!
# You can generate one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-super-secret-production-key-change-this

# Debug mode - MUST be False in production
DEBUG=False

# Allowed hosts - Add your domain and EC2 IP
ALLOWED_HOSTS=fichapinte.com.br,www.fichapinte.com.br,your-ec2-ip-address

# CORS Settings - Add your domain
CORS_ALLOWED_ORIGINS=https://fichapinte.com.br,https://www.fichapinte.com.br

# CSRF Settings - Add your domain
CSRF_TRUSTED_ORIGINS=https://fichapinte.com.br,https://www.fichapinte.com.br

# SSL/HTTPS Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Database (optional - for PostgreSQL migration)
# DATABASE_URL=postgresql://user:password@localhost:5432/pinte_fichas
